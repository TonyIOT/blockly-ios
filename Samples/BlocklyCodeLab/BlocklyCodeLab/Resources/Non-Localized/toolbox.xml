<xml>
  <category name="Sounds" colour="20">
    <block type="sounds_play_sound"></block>
    <block type="sounds_dropdown"></block>
  </category>
  <category name="Loops" colour="%{BKY_LOOPS_HUE}">
    <block type="controls_repeat_ext">
      <value name="TIMES">
        <shadow type="math_number">
          <field name="NUM">10</field>
        </shadow>
      </value>
    </block>
    <block type="controls_whileUntil">
      <value name="BOOL">
        <shadow type="logic_boolean">
          <field name="BOOL">TRUE</field>
        </shadow>
      </value>
    </block>
    <block type="controls_for">
      <value name="FROM">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="TO">
        <shadow type="math_number">
          <field name="NUM">10</field>
        </shadow>
      </value>
      <value name="BY">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="controls_forEach"></block>
    <block type="controls_flow_statements"></block>
  </category>
  <category name="Variables" colour="%{BKY_VARIABLES_HUE}" custom="VARIABLE">
  </category>
  <category name="Functions" colour="%{BKY_PROCEDURES_HUE}" custom="PROCEDURE" />
</xml>
